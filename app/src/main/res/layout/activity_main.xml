<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="149dp"
        android:layout_margin="120dp"
        app:srcCompat="@drawable/aa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

            <Button
                android:id="@+id/fadeout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fade out"
                android:background="@drawable/btn2"
                android:layout_marginStart="5dp"
                android:layout_weight="0.25"/>

            <Button
                android:id="@+id/fadein"
                android:layout_marginStart="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fade in" />

            <Button
                android:id="@+id/zoomout"
                android:layout_marginStart="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zoom out" />

                <Button
                    android:id="@+id/zoomin"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zoom in" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <Button
                android:id="@+id/bounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bounce"
                android:background="@drawable/btn2"
                android:layout_marginStart="5dp"
                android:layout_weight="0.25"/>

            <Button
                android:id="@+id/Rotate"
                android:layout_marginStart="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotate" />

            <Button
                android:id="@+id/Blink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/btn2"
                android:text="Blink" />

            <Button
                android:id="@+id/Slideup"
                android:layout_marginStart="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slide Up" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <Button
                android:id="@+id/Slidedown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slide Down"
                android:background="@drawable/btn2"
                android:layout_marginStart="5dp"
                android:layout_weight="0.25"/>

            <Button
                android:id="@+id/move"
                android:layout_marginStart="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move" />

            <Button
                android:id="@+id/Sequential"
                android:layout_marginStart="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sequential" />

            <Button
                android:id="@+id/Together"
                android:layout_marginStart="5dp"
                android:layout_weight="0.25"
                android:background="@drawable/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Together" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/cross_fadding"
            android:layout_marginStart="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/btn2"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Cross Fadding" />
        <Button
            android:id="@+id/Stop_Animation"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Animation" />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>